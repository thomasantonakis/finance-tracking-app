{
  "name": "RecurringRule",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "expense or income"
    },
    "amount": {
      "type": "number",
      "description": "Transaction amount"
    },
    "category": {
      "type": "string",
      "description": "Category name"
    },
    "subcategory": {
      "type": "string",
      "description": "Subcategory name"
    },
    "account_id": {
      "type": "string",
      "description": "Account id"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Start date"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "End date"
    },
    "frequency": {
      "type": "string",
      "description": "weekly, monthly, yearly"
    },
    "interval": {
      "type": "number",
      "description": "Every N frequency units"
    },
    "notes": {
      "type": "string",
      "description": "Optional notes"
    },
    "cleared": {
      "type": "boolean",
      "description": "Cleared flag"
    },
    "projected": {
      "type": "boolean",
      "description": "Projected flag"
    }
  },
  "required": [
    "type",
    "amount",
    "category",
    "subcategory",
    "account_id",
    "start_date",
    "end_date",
    "frequency",
    "interval"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "created_by": "{{user.email}}"
    },
    "update": {
      "created_by": "{{user.email}}"
    },
    "delete": {
      "created_by": "{{user.email}}"
    }
  }
}
