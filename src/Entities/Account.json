{
  "name": "Account",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Account name"
    },
    "starting_balance": {
      "type": "number",
      "description": "Initial balance"
    },
    "category": {
      "type": "string",
      "enum": [
        "cash",
        "bank",
        "credit_card",
        "savings",
        "investment",
        "other"
      ],
      "description": "Account type"
    },
    "color": {
      "type": "string",
      "description": "Color for visual identification"
    },
    "currency": {
      "type": "string",
      "description": "Account currency code (ISO 4217)"
    },
    "fund_id": {
      "type": "string",
      "description": "Fund reference"
    }
  },
  "required": [
    "name",
    "starting_balance",
    "category",
    "color",
    "currency"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "created_by": "{{user.email}}"
    },
    "update": {
      "created_by": "{{user.email}}"
    },
    "delete": {
      "created_by": "{{user.email}}"
    }
  }
}
