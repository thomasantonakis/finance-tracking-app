{
  "name": "Transfer",
  "type": "object",
  "properties": {
    "amount": {
      "type": "number",
      "description": "Amount transferred"
    },
    "from_account_id": {
      "type": "string",
      "description": "Source account"
    },
    "to_account_id": {
      "type": "string",
      "description": "Destination account"
    },
    "subcategory": {
      "type": "string",
      "description": "Optional subcategory label"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of transfer"
    },
    "cleared": {
      "type": "boolean",
      "description": "Whether the transfer is cleared"
    },
    "projected": {
      "type": "boolean",
      "description": "Whether the transfer is projected"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "amount",
    "from_account_id",
    "to_account_id",
    "date"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "created_by": "{{user.email}}"
    },
    "update": {
      "created_by": "{{user.email}}"
    },
    "delete": {
      "created_by": "{{user.email}}"
    }
  }
}
